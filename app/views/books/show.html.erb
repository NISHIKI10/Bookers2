<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'users/user_info', user: @user%>
      <%= render 'books/new', book: @book_new%>
    </div>
    <div class="col-xs-9">
      <h2>Book detail</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td><%= attachment_image_tag @user, :profile_imaged, format: 'jpeg', class: "img profile_image", fallback: "no_image.jpg", size: "50x50" %>
              <p><%= link_to @user.name, user_path(@user.id) %></p>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <% if user_signed_in? && current_user.id == @user.id%>
              <td><%= link_to 'Edit', edit_book_path, class: 'btn btn-success'%></td>
              <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, data: {confirm: "本当に消しますか？"},class: 'btn btn-danger'%>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>